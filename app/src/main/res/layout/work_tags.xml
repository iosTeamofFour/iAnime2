<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/WorkTagText"
              android:text="HHHHHH"
              android:clickable="true"
              android:textAllCaps="false" android:textSize="8pt" android:textColor="@drawable/work_tag_color"
              android:layout_marginEnd="4dp" android:focusable="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="/"
              android:clickable="true"
              android:layout_marginEnd="4dp"
              android:id="@+id/WorkTagDivider"
              android:textAllCaps="false" android:textSize="8pt" android:textColor="#333" android:focusable="true"/>

</LinearLayout>