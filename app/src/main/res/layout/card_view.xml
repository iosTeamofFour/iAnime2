<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="0dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/child_cardView"
>

   <android.support.constraint.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <ImageView
               app:layout_constraintDimensionRatio="1"
               android:layout_height="0dp"
               android:layout_width="wrap_content"
               android:src="@drawable/image0"
               android:id="@+id/worksImage"
               android:scaleType="centerCrop"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
       />
       <TextView
               android:text="TextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:id="@+id/nameText" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/worksImage" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp"
       />

       <TextView
               android:text="TextView"
               android:textSize="14dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/authorNameText" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/nameText" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp"/>
       <TextView
               android:text="TextView"
               android:textSize="14dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/dateText" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/authorNameText" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp"/>
       <ImageView
               android:layout_width="24dp"
               android:layout_height="36dp"
               android:src="@mipmap/aixin"
               android:id="@+id/imageView11" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/nameText"
               app:layout_constraintEnd_toEndOf="@+id/worksImage"
               android:layout_marginEnd="8dp"/>
       <ImageView
               android:layout_width="24dp"
               android:layout_height="36dp"
               android:src="@mipmap/advise_blue"
               android:id="@+id/imageView12"
               app:layout_constraintEnd_toEndOf="@+id/worksImage" android:layout_marginEnd="8dp"
               android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/authorNameText"/>
   </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>


