<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:id="@+id/outerLayout"
        android:focusableInTouchMode="true"
        tools:context=".Acitivity.WorksIndexActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="我的作品"
            android:textColorHint="@color/black"
            android:gravity="center"
            style="@style/InfoStyle"
            android:id="@+id/search_editText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/image0"
            android:id="@+id/avatar"
            app:layout_constraintTop_toTopOf="@+id/search_editText" app:layout_constraintBottom_toBottomOf="@+id/search_editText"
            app:layout_constraintStart_toStartOf="@+id/search_editText" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@mipmap/search_big"
            android:id="@+id/imageView8" app:layout_constraintEnd_toEndOf="@+id/search_editText"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/search_editText" app:layout_constraintBottom_toBottomOf="@+id/search_editText"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="160dp"
            app:layout_constraintTop_toBottomOf="@+id/search_editText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>