<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Acitivity.DrawingActivity">

    <com.nemesiss.dev.ianime.View.PinchImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="parent"/>
    <com.nemesiss.dev.ianime.View.MyDrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myDrawView"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="parent"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/keyboard_arrow_left"
            android:id="@+id/back"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/undo"
            android:id="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/back" app:layout_constraintStart_toEndOf="@+id/back"
            android:layout_marginStart="2dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/redo"
            android:id="@+id/imageView16"
            app:layout_constraintTop_toTopOf="@+id/imageView15" app:layout_constraintStart_toEndOf="@+id/imageView15"
            android:layout_marginStart="2dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/target"
            android:id="@+id/anchor"
            app:layout_constraintTop_toTopOf="@+id/imageView16" app:layout_constraintStart_toEndOf="@+id/imageView16"
            android:layout_marginStart="2dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dot_circle"
            android:id="@+id/markPoint"
            app:layout_constraintTop_toTopOf="@+id/anchor" app:layout_constraintStart_toEndOf="@+id/anchor"
            android:layout_marginStart="2dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/eraser"
            android:id="@+id/imageView19"
            app:layout_constraintTop_toTopOf="@+id/markPoint" app:layout_constraintStart_toEndOf="@+id/markPoint"
            android:layout_marginStart="2dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/paint"
            android:id="@+id/paint"
            app:layout_constraintTop_toTopOf="@+id/imageView19" app:layout_constraintStart_toEndOf="@+id/imageView19"
            android:layout_marginStart="2dp"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/publish_blue"
            android:id="@+id/imageButton2"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myDrawView" android:layout_marginEnd="64dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/camera64"
            android:id="@+id/camera"
            app:layout_constraintTop_toTopOf="@+id/paint"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/exit"
            android:id="@+id/imageButton"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/myDrawView" android:layout_marginStart="64dp"/>
</android.support.constraint.ConstraintLayout>