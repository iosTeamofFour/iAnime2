<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp" android:layout_marginTop="15dp"
            android:text="请选择一个操作" android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/checkDraft"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp"
            android:text="查看线稿图" android:textColor="@color/GrayText"
            android:textSize="16sp" app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" tools:layout_editor_absoluteX="20dp"/>
    <TextView
            android:id="@+id/saveSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="25dp"
            android:text="保存上色稿到本地" android:textColor="@color/GrayText"
            android:textSize="16sp" app:layout_constraintStart_toStartOf="@+id/checkDraft"
            app:layout_constraintTop_toBottomOf="@+id/checkDraft" tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:id="@+id/saveDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp" android:text="保存线稿到本地"
            android:textColor="@color/GrayText" android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/saveSplash"
            app:layout_constraintTop_toBottomOf="@+id/saveSplash"/>
</android.support.constraint.ConstraintLayout>