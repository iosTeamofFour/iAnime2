<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Acitivity.DrawingActivity">

    <com.nemesiss.dev.ianime.View.PinchImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="parent"/>
    <com.nemesiss.dev.ianime.View.MyDrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myDrawView"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="parent"
    />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="16dp"
                  android:id="@+id/toolLinear"
                  android:elevation="8dp"
                  android:background="@drawable/linear_layout_background">


        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/keyboard_arrow_left_blue64"
                android:id="@+id/back"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/undo"
                android:id="@+id/imageView15"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back" app:layout_constraintStart_toEndOf="@+id/back"
                android:layout_marginStart="16dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/redo"
                android:id="@+id/imageView16"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@+id/imageView15"
                app:layout_constraintStart_toEndOf="@+id/imageView15"
                android:layout_marginStart="16dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/target"
                android:id="@+id/anchor"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@+id/imageView16"
                app:layout_constraintStart_toEndOf="@+id/imageView16"
                android:layout_marginStart="16dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dotcircle"
                android:id="@+id/markPoint"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@+id/anchor" app:layout_constraintStart_toEndOf="@+id/anchor"
                android:layout_marginStart="16dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/eraser"
                android:id="@+id/imageView19"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@+id/markPoint" app:layout_constraintStart_toEndOf="@+id/markPoint"
                android:layout_marginStart="16dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorAccent"
                android:id="@+id/paint"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView19"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
        />
    </LinearLayout>

    <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/multi_func"
            android:background="@android:color/transparent"
            android:id="@+id/publish"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myDrawView" android:layout_marginEnd="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/camera64"
            android:id="@+id/camera"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/toolLinear"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>

</android.support.constraint.ConstraintLayout>